<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LunchScheduler.LoginPage" NavigationPage.HasNavigationBar="False" >
    <ContentPage.Content>
        <Grid Padding="20, 0" RowDefinitions="3*,7*"  >
            <StackLayout Grid.Row="0" VerticalOptions="EndAndExpand" >
                <Image Source="sandwich"
                HorizontalOptions="CenterAndExpand"
                   HeightRequest="75"
                   WidthRequest="75" ></Image>

                <Label Text="Lunch Scheduler" FontSize="Large" FontAttributes="Bold"
                   HorizontalTextAlignment="Center"  ></Label>
            </StackLayout>

            <StackLayout Grid.Row="1" Margin="0,50,0,0" >
                <Label Text="Email"  ></Label>
                <Entry Placeholder="Enter your email" Text="{Binding Email}" ></Entry>

                <Button Clicked="Button_Clicked" Margin="0,10,0,0"
                BackgroundColor="DarkBlue" TextColor="White"
                    Text="Email Login Link" ></Button>
            </StackLayout>
            
          

            
        </Grid>
    </ContentPage.Content>
</ContentPage>