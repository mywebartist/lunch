<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LunchScheduler.ChefItemsManagePage" 
             Title="Chef Items manage"
             >
    <ContentPage.Content>
        <StackLayout Padding="20,20" >

            <Label Text="Item name"  ></Label>
            <Entry Placeholder="Enter item name" Text="{Binding itemName}" ></Entry>

            <Label Text="Item Description"  ></Label>
            <Editor Placeholder="Enter item name" Text="{Binding description}" ></Editor>

            <Button Clicked="Button_Clicked" Margin="0,10,0,0"
                BackgroundColor="DarkBlue" TextColor="White"
                    Text="Add Item" ></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>