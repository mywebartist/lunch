<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LunchScheduler.ChefItemsManagePage" 
             Title="Chef Items manage"
             >
    <ContentPage.Content>
        <StackLayout Padding="20,20" >

            <Label Text="Menu item name"  ></Label>
            <Entry Placeholder="Name" Text="{Binding itemName}" ></Entry>

            <Label Text="Menu item description"  ></Label>
            <Editor Placeholder="Description" Text="{Binding description}" ></Editor>

            <Button Clicked="Button_Clicked" Margin="40,0,40,0"
                BackgroundColor="DeepSkyBlue" TextColor="White"
                    Text="Add Menu Item"   ></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>