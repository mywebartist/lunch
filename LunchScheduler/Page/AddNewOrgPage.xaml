<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LunchScheduler.Page.AddNewOrgPage">
    <ContentPage.Content>

        <StackLayout Padding="20,20">


            <Label Text="New organization name"  ></Label>
            <Entry Placeholder="name" Text="{Binding orgName}" ></Entry>

            <Label Text="Organization description"  ></Label>
            <Editor Placeholder="description" Text="{Binding description}" ></Editor>


            <Button Clicked="Button_Clicked" Margin="40,0,40,0"
                BackgroundColor="DeepSkyBlue" TextColor="White"
                    Text="Add Organization" ></Button>
            
            
        </StackLayout>
        
        
    </ContentPage.Content>
</ContentPage>