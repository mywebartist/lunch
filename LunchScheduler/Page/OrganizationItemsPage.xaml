<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LunchScheduler.Page.OrganizationItemsPage">
    <ContentPage.Content>
        <StackLayout>

            <ListView 
                x:Name="GroupedView"
                        SelectionMode="None"
                ItemsSource="{Binding OrgItemsListData}" RowHeight="60"  SeparatorVisibility="Default" SeparatorColor="LightGray" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnDefinitions="*, Auto"  Padding="20,0" RowDefinitions="*,Auto"  >

                                <Label Padding="0,0,0,0" Grid.Row="1" Grid.Column="0" Text="{Binding name}" VerticalTextAlignment="Center" TextColor="Black" >
                                </Label>

                                <Button Clicked="Button_ClickedAsync"  Grid.Column="1" ClassId="{Binding id}"  Text="Join"></Button>


                                <Label Padding="0,0,0,0" Grid.Row="2"   Text="{Binding description}" VerticalTextAlignment="Center" TextColor="Black" >
                                </Label>
                                
                            </Grid>
 
                            
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>